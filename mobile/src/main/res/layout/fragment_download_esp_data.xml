        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewChooseEndpointToQuery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stringTextViewEndpoint"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/textViewChooseDataToRetrieveLoading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="start"
                    android:foregroundGravity="center_vertical"
                    android:text="@string/wait_please_loading"
                    android:textColor="@color/black_text"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/linearLayoutEndpointSensorsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical" >

                    <!-- Here a new CardView will be added for every endpoint -->

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
